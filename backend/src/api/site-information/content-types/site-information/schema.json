{
  "kind": "singleType",
  "collectionName": "site_informations",
  "info": {
    "singularName": "site-information",
    "pluralName": "site-informations",
    "displayName": "Site Information"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true,
      "maxLength": 50,
      "minLength": 1
    },
    "sub_title": {
      "type": "string",
      "maxLength": 50,
      "unique": true
    },
    "home_url": {
      "type": "string",
      "required": true,
      "unique": true,
      "minLength": 1
    },
    "avatar": {
      "allowedTypes": [
        "images",
        "files"
      ],
      "type": "media",
      "multiple": false,
      "required": false
    },
    "admin_name": {
      "type": "string",
      "required": true,
      "maxLength": 20,
      "unique": true,
      "minLength": 1
    },
    "profile": {
      "type": "text",
      "required": true,
      "maxLength": 200,
      "minLength": 1
    },
    "icon_links": {
      "type": "component",
      "repeatable": true,
      "component": "link.icon-link"
    },
    "navigation_links": {
      "type": "component",
      "repeatable": true,
      "component": "link.text-link"
    }
  }
}
